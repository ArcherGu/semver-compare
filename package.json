{
  "name": "semver-compare",
  "version": "0.0.1",
  "description": "A GitHub Action to compare semver versions",
  "author": "ArcherGu",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/ArcherGu/semver-compare.git"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "tsup",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "postinstall": "npx simple-git-hooks"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "semver": "^7.7.1"
  },
  "devDependencies": {
    "@lightwing/eslint-config": "^1.0.104",
    "@swc/core": "^1.10.15",
    "@types/node": "^22.13.1",
    "@types/semver": "^7.5.8",
    "eslint": "^9.20.0",
    "lint-staged": "^15.4.3",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md,json,yml}": [
      "eslint --fix"
    ]
  }
}